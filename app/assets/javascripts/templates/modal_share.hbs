{{!-- BACKDROP --}}
<div class="modal-backdrop js-btn-modal-close"></div>
{{!-- WINDOW --}}
<div class="modal-window">
  <a href="#" class="modal-close js-btn-modal-close">
    <svg class="c-icon -medium"><use xlink:href="#icon-close_popup"></use></svg>
  </a>
  <div class="modal-wrapper scroll-dark">
    <div class="modal-content">
      <div class="c-share">
        <h2 class='modal-title text -questions'>Share this</h2>

        <div class="share-input">
          <input class="js-input-copy" type="text" name="url" value="{{this.url}}" readonly="readonly">
          <button class="js-btn-copy" type="button" name="button">Copy</button>
        </div>

        <div class="share-social">
          <ul class="c-btn-container -j-between -a-center">
            <li>
              <a href="https://twitter.com/share?url={{this.urlEncoded}}" target="_blank" class="btn -light -with-icon -twitter js-btn-popup">
                <svg class="c-icon -medium"><use xlink:href="#icon-twitter"></use></svg>
                <span>Twitter</span>
              </a>
            </li>
            <li>
              <a href="https://www.linkedin.com/shareArticle?mini=true&url={{this.urlEncoded}}&title=Grow%20Asia%20Counter&summary=The Grow Asia Counter allows users to estimate their greenhouse gas emissions of different agricultural management scenarios.&source=" target="_blank" class="btn -light -with-icon -linkedin js-btn-popup">
                <svg class="c-icon -medium"><use xlink:href="#icon-linkedin"></use></svg>
                <span>LinkedIn</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
