<div class="spinner"></div>
<div class="row">
  <div class="columns small-12">
    <div id="homeMapView">
      <h2 class="title-width text -title-map">
        Current Status of Global Nutrition:
        <div id="targetSelectorView" class="plain">
          <select name="target" id="targetSelector" class="js--target-selector">
            <option value="stunting">Stunting</option>
            <option value="wasting">Wasting</option>
            <option value="anaemia">Anemia</option>
            <option value="ebf">Non EBF</option>
          </select>
        </div>
      </h2>
      <div id="fundingProgressView" class="c-funding-progress"></div>
      <div id="map-container" class="c-map-home"></div>
      <div class="row">
        <div class="columns small-12">
          <div id="mapLegendView" class="c-map-legend">
            <h4 class="text -legend">Percentage of people affected</h4>
            <div class="buckets text -legend">
              <div class="bucket"><span class="bc1"></span><15%</div>
              <div class="bucket"><span class="bc2"></span>15-30%</div>
              <div class="bucket"><span class="bc3"></span>30-45%</div>
              <div class="bucket"><span class="bc4"></span>45-60%</div>
              <div class="bucket"><span class="bc5"></span>60-75%</div>
              <div class="bucket"><span class="bc6"></span>75-90%</div>
              <div class="bucket"><span class="bc7"></span>>90%</div>
              <div class="bucket"><span class="default"></span>no data</div>
            </div>
          </div>
        </div>
        <div class="columns small-12">
          <p class="text -footnote -right">
            Source: Global Nutrition Report, 2016
          </p>
        </div>
      </div>
    </div>
    <hr class="c-separator"/>
  </div>
</div>
