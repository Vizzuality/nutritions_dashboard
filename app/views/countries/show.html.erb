<%= render 'shared/header', class_name: '-normal' %>

<div id="map-section" class="l-map l-ajax-loader">
  <div class="spinner"></div>
  <div class="row">
    <div class="columns small-12">
      <div id="countryMapView">
        <div class="columns small-12 medium-6 medium-offset-3">
          <div id="countrySelectorView">
            <select name="group" id="groupSelector" class="js--country-selector"></select>
          </div>
        </div>
        <div id="map-container" class="c-map-home"></div>
      </div>
    </div>
    <div class="smooth-scroll">
      <a href="#data-section" class="js-btn-smooth-scroll">
        <svg class="icon"><use xlink:href="#icon-scroll"></use></svg>
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="columns small-12">
    <div id="data-section" class="l-content -top placeholder"></div>
  </div>
  <div class="columns small-12 medium-6">
    <div id="currentCountryDonor" class="l-chart l-ajax-loader">
      <div id="currentDonorFundingText"></div>
      <div class="spinner"></div>
      <div class="c-chart -burden"></div>
    </div>
  </div>
  <div class="columns small-12 medium-6">
    <div id="currentCountryGovernment" class="l-chart l-ajax-loader">
      <div id="governmentFundingText"></div>
      <div class="spinner"></div>
      <div class="c-chart"></div>
    </div>
  </div>
  <div class="columns small-12">
    <div class="l-content -last"></div>
  </div>
</div>
