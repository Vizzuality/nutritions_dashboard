<div class="row">
  <div class="columns small-12">
    <div class="l-header <%= "-transparent" if controller_name == 'welcome' || controller_name == 'about' %>">
      <div class="logo">
        <a href="/">
          <svg class="icon"><use xlink:href="#icon-logo"></use></svg>
          <svg class="icon -white"><use xlink:href="#icon-logo-white"></use></svg>
        </a>
      </div>
      <div class="desktop">
        <%= render 'shared/navigation' %>
      </div>
      <div class="js-btn-mobile-menu mobile">
        <svg class="icon -open"><use xlink:href="#icon-menu"></use></svg>
        <svg class="icon -close"><use xlink:href="#icon-close"></use></svg>
      </div>
      <div class="c-mobile-menu">
        <%= render 'shared/navigation' %>
      </div>
    </div>
  </div>
</div>
